<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/access-denied.jsp*</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/scripts/dojo/*</pattern>
        <pattern>/struts/dojo/*</pattern>
        <pattern>/resources/*</pattern>
    </excludes>

    <decorator name="welcome" page="welcome.jsp">
        <pattern>/welcome.html*</pattern>
        <pattern>/signup.html*</pattern>
        <pattern>/signupComplete.html*</pattern>
    </decorator>

    <decorator name="outer" page="outer.jsp">
        <pattern>/login.jsp*</pattern>
        <pattern>/goodbye.html*</pattern>
        <pattern>/biditem.html*</pattern>
    </decorator>

    <decorator name="inner" page="inner.jsp">
        <pattern>/home.html*</pattern>
        <pattern>/email-promotion.html*</pattern>
        <pattern>/sms-promotion.html*</pattern>
        <pattern>/createEmailPromotion.html*</pattern>
        <pattern>/createSmsPromotion.html*</pattern>
        <pattern>/sentEmailReport.html*</pattern>
        <pattern>/sentSmsReport.html*</pattern>
    </decorator>

</decorators>
